<div class="col col-sm-6 col-md-4 my-3">
    <div class="card text-center">
    <div class="card-header">
        Created By Vin√≠cius Toshio
    </div>
    <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.description %></p>

        <div class="d-flex justify-content-center gap-2">
            <%= link_to "Read", article, class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-primary" %>
            <%= button_to "Delete", article, method: :delete, data:{turbo_confirm: "Are you sure?"}, form:{ class: "btn btn-outline-danger"}, class: "unstyled-button" %>
        </div>
    </div>
    <div class="card-footer text-body-secondary">
        <small>
            Created at <%= format_br_datetime(article.created_at) %>
        </small> 
        <% unless article.created_at === article.updated_at then %>
            <small>
                - Updated at <%= format_br_datetime(article.updated_at) %>
            </small>
        <% end %>
    </div>
    </div>
</div>